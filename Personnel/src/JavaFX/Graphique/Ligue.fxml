<AnchorPane prefHeight="600.0" prefWidth="800.0" stylesheets="@application.css" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="JavaFX.Controller.LigueControl">
   <children>
      <Label layoutX="69.0" layoutY="72.0" prefHeight="47.0" prefWidth="272.0" stylesheets="@application.css" text="Selectionner la ligue :" textFill="WHITE">
         <font>
            <Font name="System Bold" size="26.0" />
         </font>
      </Label>
      <ListView fx:id="myListView" layoutX="69.0" layoutY="126.0" prefHeight="347.0" prefWidth="662.0" style="-fx-border-color: #000; -fx-background-color: #fafafa; -fx-border-width: 5px;" stylesheets="@application.css" />
      <Label fx:id="myLabel" layoutX="338.0" layoutY="77.0" prefHeight="38.0" prefWidth="387.0" stylesheets="@application.css" textFill="WHITE">
         <font>
            <Font name="System Bold" size="26.0" />
         </font>
      </Label>
      <Button fx:id="back" alignment="CENTER" layoutX="14.0" layoutY="14.0" mnemonicParsing="false" onAction="#BackButton" onKeyPressed="#ToucheRetour" prefHeight="47.0" prefWidth="93.0" style="-fx-background-color: #3498db #fff;" stylesheets="@application.css" text="Retour">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Button>
      <Button fx:id="acces" layoutX="550.0" layoutY="488.0" mnemonicParsing="false" onAction="#AccesEmploye" prefHeight="58.0" prefWidth="179.0" style="-fx-background-color: #fff;" text="Gérer la ligue">
         <font>
            <Font name="System Bold" size="12.0" />
         </font></Button>

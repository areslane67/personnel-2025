         <font>
            <Font name="System Bold" size="20.0" />
         </font>
      </Button>
      <Button fx:id="modif" layoutX="476.0" layoutY="488.0" mnemonicParsing="false" onAction="#ModifLigue" prefHeight="58.0" prefWidth="62.0" style="-fx-background-color: #f1c40f;" stylesheets="@application.css" text="Modif">
         <font>
            <Font name="System Bold" size="11.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
